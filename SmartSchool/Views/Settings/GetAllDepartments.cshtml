@model List<SmartSchool.Models.Settings.Departments>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Languges CurrentLanguage = ViewBag.CurrentLanguage;
    string pull = "";
    string modalpositon = "";
    string buttonpositon = "";
    string textalign = "";
    if (CurrentLanguage == Languges.English)
    {
        pull = "pull-left";
        modalpositon = "left";
        buttonpositon = "right";
        textalign = "left";
    }
    else
    {
        pull = "pull-right";
        textalign = "right";
        modalpositon = "right";
        buttonpositon = "left";

    }
}

<div class="head-body-col">
    <span>
        <!-- back  icon-->
        <a onclick="goBack()" style="color:#fff"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
    </span>
    <h2>@R.GetResource("Departments")</h2>
</div>

<div class="inner-Container">
    <div class="light-component action">
        <a href="@Url.Action("AddNewDepartment","Settings")" style="width:250px">
            <span>
                <i class="fa fa-plus" aria-hidden="true"></i>
            </span>
            <h5>
                @R.GetResource("AddNewDepartment")
            </h5>
        </a>
    </div>

    <div class="light-component inner">
        <table class="table" id="exportTable" style="width:100%">
            <thead>
                <tr>
                    <th scope="col">@R.GetResource("DepartmentType")</th>
                    <th scope="col"> @R.GetResource("DepartmentArabicName") </th>
                    <th scope="col"> @R.GetResource("DepartmentEnglishName") </th>
                    <th scope="col"> @R.GetResource("Edit") </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepartmentType</td>
                        <td>@item.DepartmentArabicName</td>
                        <td>@item.DepartmentEnglishName</td>
                        <td style="display:flex">
                            <a href="@Url.Action("EditDepartment","Settings", new { DepartmentID=item.DepartmentID })" class="padding"><i class="fa fa-edit fa-s-15"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>