
@{
    ViewBag.Title = "Index";
    Layout = null;
    Languges CurrentLanguage = ViewBag.CurrentLanguage;
  
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ZLIOUS | SMART-SCHOOL</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/css/bootstrap.min.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
    <link href="~/AppContent/style.css" rel="stylesheet">
    @if (CurrentLanguage == Languges.Arabic)
    {
        <link href="~/AppContent/rtl.css" rel="stylesheet" />


    }
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.21/css/jquery.dataTables.css">
    <link rel="stylesheet" type="text/css"
          href="https://cdn.datatables.net/buttons/1.6.2/css/buttons.dataTables.min.css">
    <script type="text/javascript" charset="utf8"
            src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.js"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.flash.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.2/js/buttons.print.min.js"></script>
    <script src="https://use.fontawesome.com/207b7392fc.js"></script>


</head>
<body>
    <header class="header-container">
        <section class="inner-row">
            <div class="banner light-component">
                <div class="logo-holder">
                    <a href="javascript:void(0)" class="header-logo-anchor">
                        <img src="./Images/smartschoollogo.png" alt="smart school logo">
                    </a>
                </div>


                <nav class="toolbar-nav">
                    <ul>
                      
                        <li>
                            <a href="@Url.Action("SwitchLanguage","Common")" class="anchor-lang">
                                <span>
                                    <i class="fa fa-language" aria-hidden="true"></i>
                                </span>
                            </a>
                        </li>
                    </ul>
                </nav>

            </div>
        </section>
    </header>

@if (CurrentLanguage == Languges.English)
{
    <main class="body-container">
        <div class="inner-row">

            <div class="head-body-col">
                <span>
                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                </span>
                <h2>
                    Online registration service
                </h2>
            </div>

            <div class="inner-Container">
                <div class="light-component action">
                    <a href="javascript:void(0)" class="fixed-ancohr">
                        <span>
                            <i class="fa fa-sticky-note-o" aria-hidden="true"></i>
                        </span>
                        <h4>
                            Registration  Note
                        </h4>
                    </a>
                </div>

                <div class="light-component inner">
                    <h4 class="padding">
                        This service allows parents to submit registration applications for their children and for all classes for the academic year 2020-2021, you must observe the following:
                    </h4>
                    <ul class="text-holder">
                        <li>
                            If you are the parent of a student who is currently registered in the operating schools of the smartschool system, and you have an account in the Parents and Students Gate, click on the "Enter as Parent" button to enter the Parent and Student Portal to submit a request to reserve a seat for the student or register a new student.
                        </li>
                        <li>
                            If you do not have an account in the Parents and Students Gate, you can create a new account by clicking on the "New Student" button to submit a request to reserve a seat for the student in another school or register a new student.
                        </li>
                        <li>
                            Online registration is available to students in all grades from kindergarten to twelfth grade.
                        </li>
                        <li>
                            Applicants must upload a copy of all required documents, for example: ID copy, birth certificate, proof of residence, etc.
                        </li>
                        <li>
                            All requests submitted will be verified through the registration section, and the applicant will be notified of any action taken on the application through the website through notification by text messages (SMS)
                        </li>
                    </ul>
                    <div class="light-component padding">
                        <a href="javascript:void(0)" onclick="Redirect();" id="NewStudent"  class="primary-anchor">
                            Register Now
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </main>

}
else
{
    <main class="body-container">
        <div class="inner-row">

            <div class="head-body-col">
                <span>
                    <i class="fa fa-user-plus" aria-hidden="true"></i>
                </span>
                <h2>
                   خدمة التسجيل الألكتروني
                </h2>
            </div>

            <div class="inner-Container">
                <div class="light-component action">
                    <a href="javascript:void(0)" class="fixed-ancohr">
                        <span>
                            <i class="fa fa-sticky-note-o" aria-hidden="true"></i>
                        </span>
                        <h4>
                          ملاحظات التسجيل
                        </h4>
                    </a>
                </div>

                <div class="light-component inner">
                    <h4 class="padding">
                        تتيح هذه الخدمة لأولياء الأمور لتقديم طلبات التسجيل لأبنائهم ولجميع الصفوف الدراسية للعام الدراسي 2020-2021 ، عليك مراعاة ما يلي :                    </h4>
                    <ul class="text-holder">
                        <li>اذا كنت ولي أمر لطالب مسجل حاليا في مدارس المشغلة لنظام smartschool، ولديك حساب في بوابة أولياء الأمور والطلبة، أنقرعلى زر "الدخول كولي أمر" للدخول إلى بوابة أولياء الأمور والطلاب وذلك لتقديم طلب حجز مقعد للطالب أو تسجيل طالب مستجد.</li>
                        <li> اذا لم يكن لديك حساب في بوابة أولياء الامور والطلبة، يمكنك إنشاء حساب جديد بالنقر على زر "طالب جديد" لتقديم طلب حجز مقعد للطالب الموجود في مدرسة أخرى أو تسجيل طالب مستجد.</li>
                        <li>التسجيل الالكتروني متاح للطلاب في جميع الصفوف الدراسية من مرحلة رياض الأطفال إلى الصف الثاني عشر.</li>
                        <li>يجب على المتقدمين تحميل صورة عن جميع الوثاق المطلوبة مثال: صورة الهوية، شهادة الميلاد، واثبات السكن...الخ.</li>
                        <li> سيتم التحقق من جميع الطلبات المقدمة عن طريق قسم التسجيل وسيتم إعلام المتقدم بأي إجراء متخذ على الطلب عن طريق الموقع الالكتروني من خلال اشعاره بالرسائل النصية (SMS)</li>

                    </ul>
                    <div class="light-component padding">
                        <a href="javascript:void(0)" onclick="Redirect();" id="NewStudent"  class="primary-anchor">
                            سجل الأن
                        </a>
                    </div>
                </div>
            </div>

        </div>

    </main>
}
    <footer class="footer-Contianer">

        <section class="inner-row footer">
            <div class="bg-pattern">
                <div class="shader"></div>
            </div>
            <p>
                Super-powered by Zlious Tech ©2020-2021.
            </p>
        </section>

    </footer>
    </body>
</html>
<script>
    function Redirect() {
        window.location = "@Url.Action("NewParent", "Registration")";
    }

    window.onscroll = function () { scrollFunction() };
    function scrollFunction() {
        if (document.body.scrollTop > 20 || document.documentElement.scrollTop > 20) {
            $('#scroll-btn').fadeIn();
        } else {
            $('#scroll-btn').fadeOut();
        }
    }
    function topFunction() {
        document.body.scrollTop = 0;
        document.documentElement.scrollTop = 0;
    }
</script>
