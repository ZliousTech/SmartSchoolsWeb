                <div class="col-md-4">
                    <div class="form-group">
                        <label for="date" class="required">@R.GetResource("Date")</label>
                        <input type="date" id="trakingdate" class="form-control" placeholder="dd/MM/yyyy" value="@ViewBag.Date">
                    </div>
                </div>
