@model IEnumerable<SmartSchool.Models.Attendance.AttendanceTrackingVM>
@{
    ViewBag.Title = "Automatic Attendance";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Languges CurrentLanguage = ViewBag.CurrentLanguage;
    string pull = "";
    string modalpositon = "";
    string buttonpositon = "";
    string textalign = "";
    if (CurrentLanguage == Languges.English)
    {
        pull = "pull-left";
        modalpositon = "left";
        buttonpositon = "left";
        textalign = "left";
    }
    else
    {
        pull = "pull-right";
        textalign = "right";
        modalpositon = "right";
        buttonpositon = "right";

    }
}

<style>
    .badge-light-success {
        background-color: #dfffea;
        color: #17c653;
        padding: 0.25em 0.5em;
        border-radius: 0.2rem;
        font-size: 0.875em;
        font-weight: 700;
        display: inline-block;
        line-height: 1;
        text-align: center;
        vertical-align: baseline;
    }

    .badge-light-danger {
        background-color: #ffeef3;
        color: #f8285a;
        padding: 0.25em 0.5em;
        border-radius: 0.2rem;
        font-size: 0.875em;
        font-weight: 700;
        display: inline-block;
        line-height: 1;
        text-align: center;
        vertical-align: baseline;
    }

    .required:after {
        content: "*";
        position: relative;
        font-size: inherit;
        color: red;
        padding-left: .25rem;
        font-weight: 600;
    }

    .bd-callout-info {
        border-left-color: #3699ff;
    }

    .bd-callout {
        padding: 1.25rem;
        margin-top: 1.25rem;
        margin-bottom: 1.25rem;
        border: solid 1px #e6e7e8;
        box-shadow: rgba(0, 0, 0, 0.1) 0px 1px 1px;
        border-radius: 10px;
        border-left-width: .50rem;
        border-left-color: #3699ff;
    }

    .borderless-btn {
        border: none;
        outline: none;
        background-color: transparent;
    }

        .borderless-btn:focus,
        .borderless-btn:active {
            border: none;
            outline: none;
            box-shadow: none;
            background-color: transparent;
        }

    .dropdown-menu-scrollable {
        max-height: 200px;
        overflow-y: auto;
    }

        .dropdown-menu-scrollable .dropdown-item {
            margin-top: 1px;
        }

    .selected-column {
        background-color: #3699ff !important;
        color: white !important;
    }

    .btn-theme {
        color: #fff !important;
        background-color: #3699ff !important;
        border-color: #3699ff !important;
    }
</style>

<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
<script src="~/Scripts/jquery-3.1.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@9"></script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.1/umd/popper.min.js"></script>
