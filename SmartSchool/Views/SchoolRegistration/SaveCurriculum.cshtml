@model  Objects.Curriculum

@{
    Layout = null;
}
@using (Html.BeginForm("SaveCurriculum", "SchoolRegistration", FormMethod.Post, new { id = "popupFormCur" }))
{
    @Html.HiddenFor(a => a.SchoolID)

    if (Model != null && Model.CurriculumID > 0)
    {
        @Html.HiddenFor(a => a.CurriculumID)

    }
    <div class="form-group">
        <label>@R.GetResource("CurriculumArabicName")</label>
        @Html.TextBoxFor(a => a.CurriculumArabicName)

    </div>
    <div class="form-group">
        <label>@R.GetResource("CurriculumEnglishName")</label>
        @Html.TextBoxFor(a => a.CurriculumEnglishName)

    </div>

    <div>
        <input type="submit" value="@R.GetResource("Save")" />
    </div>

}
<script>
    $(document).ready(function () {
        debugger;
        var SchoolID = location.search.split('=')[1];
        $("#SchoolID").val(SchoolID);
    });
</script>