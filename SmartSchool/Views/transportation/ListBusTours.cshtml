@model List<Objects.DTO.transportationDTO>
@{
    ViewBag.Title = "AllTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Languges CurrentLanguage = ViewBag.CurrentLanguage;

}

<div class="head-body-col">
    <span onclick="goBack()">
        <!-- back  icon-->
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </span>
    <h2>@R.GetResource("BusTours")</h2>
</div>


@if (CurrentLanguage == Languges.Arabic)
{
    <script src="//cdn.datatables.net/plug-ins/1.10.20/i18n/Arabic.json"></script>
}


<div class="inner-Container">
    @*<div class="light-component action">
        <a href="@Url.Action("AddBusTour","transportation")" style="width:195px">
            <span>
                <i class="fa fa-plus" aria-hidden="true"></i>
            </span>
            <h4>
                @R.GetResource("AddBusTour")
            </h4>
        </a>
    </div>*@

    <div class="light-component inner">

        <table class="table" id="exportTable" style="width:100%">

            <thead>
                <tr>

                    <th scope="col"> @R.GetResource("BusNo") </th>
                    <th scope="col"> @R.GetResource("TourName") </th>
                    @*<th scope="col">@R.GetResource("TourAreaName")</th>*@
                    @*<th scope="col">@R.GetResource("FirstEscort")</th>
                    <th scope="col">@R.GetResource("SecondEscort")</th>*@
                    <th scope="col"> @R.GetResource("StratingTime") </th>
                    <th scope="col">@R.GetResource("MaxNumberOfStudent")</th>
                    <th scope="col">@R.GetResource("NumberofStudents")</th>
                    <th scope="col">@R.GetResource("TourDirection")</th>
                    <th scope="col">@R.GetResource("Edit")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr scope="row">

                        <td>@item.BusNo</td>
                        <td>@item.TourName</td>
                        @*<td>@item.TourAreaName</td>*@
                        @*<td>@item.Attendant</td>
                        <td>@item.SecondAttendant</td>*@
                        <td>
                            <div style="display:flex;align-items:center;justify-content:space-around">
                                <i class="fa fa-clock-o fa-s-15" aria-hidden="true"></i>
                                @item.StratingTime.ToString(@"hh:mm:ss tt")
                            </div>
                        </td>
                        <td>@item.MaxNoofStudents</td>
                        <td>@item.NumberofStudents</td>
                        <td>
                            @if (item.TourDirection == 0)
                            {
                                <label class="Driver-label" style="display:flex;justify-content:center;">
                                    <span style="margin:0px 5px">
                                        <i class="fa fa-long-arrow-right fa-s-15"></i>
                                    </span>
                                    @R.GetResource("OnWay(Go)")
                                </label>

                            }
                            else if (item.TourDirection == 1)
                            {
                                <label class="Driver-label" style="display:flex;justify-content:center;">
                                    <span style="display:flex;justify-content:center;flex-direction:column;margin:0px 5px">
                                        <i class="fa fa-long-arrow-left fa-s-15 gray"></i>
                                    </span>
                                    @R.GetResource("OnWay(Return)")
                                </label>
                            }
                            @*else if (item.TourDirection == 2)
                            {
                                <label class="Driver-label" style="display:flex;justify-content:center;">
                                    @R.GetResource("TwoWay")
                                </label>
                            }*@

                        </td>

                        <td style="display:flex">
                            <a href="@Url.Action("EditTour","transportation",new { TourID = item.TourID})" class="padding"><i class="fa fa-edit fa-s-15"></i></a>
                        </td>

                    </tr>
                }


            </tbody>
        </table>

    </div>
</div>
