@model List<Objects.DTO.transportationDTO>
@{
    ViewBag.Title = "AllTeachers";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Languges CurrentLanguage = ViewBag.CurrentLanguage;

}

<div class="head-body-col">
    <span onclick="goBack()">
        <!-- back  icon-->
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </span>
    
    <h2>@R.GetResource("schoolBuses")</h2>
</div>


@if (CurrentLanguage == Languges.Arabic)
{
    <script src="//cdn.datatables.net/plug-ins/1.10.20/i18n/Arabic.json"></script>
}


<div class="inner-Container">
    <div class="light-component action">
        <a href="@Url.Action("AddBus","transportation")" style="width:195px">
            <span>
                <i class="fa fa-plus" aria-hidden="true"></i>
            </span>
            <h4>
                @R.GetResource("AddBus")
            </h4>
        </a>
    </div>

    <div class="light-component inner">

        <table class="table" id="exportTable" style="width:100%">

            <thead>
                <tr>

                    <th scope="col"> @R.GetResource("BusNo") </th>
                    <th scope="col"> @R.GetResource("PlateNumber") </th>
                    <th scope="col"> @R.GetResource("driver") </th>
                    <th scope="col">@R.GetResource("FirstEscort")</th>
                    <th scope="col">@R.GetResource("SecondEscort")</th>
                    <th scope="col">@R.GetResource("BusLicenseDate")</th>
                    <th scope="col">@R.GetResource("NumberOfseats")</th>
                    <th scope="col">@R.GetResource("ParkingArea")</th>
                    <th scope="col">@R.GetResource("Edit")</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {


                <tr scope="row">

                    <td>@item.BusNo</td>
                    <td>@item.PlateNumber</td>
                    <td>@item.Driver</td>
                    <td>@item.Attendant</td>
                    <td>@item.SecondAttendant</td>
                    <td>
                        <div style="display:flex;align-items:center;">
                            <i class="fa fa-calendar fa-s-15" aria-hidden="true" style="margin:0px 10px"></i>
                            @item.BusLicenseDate.ToShortDateString()
                        </div>
                    </td>
                    <td>@item.NumberOfseats</td>
                    <td>
                        @if (item.ParkingArea == 0)
                        {
                            <label class="Driver-label">@R.GetResource("driver")</label>

                        }
                        else
                        {
                            <label class="School-label">@R.GetResource("school")</label>

                        }
                    </td>

                    <td style="display:flex">
                        <a href="@Url.Action("EditBus","transportation",new { BusID = item.BusID})" class="padding"><i class="fa fa-edit fa-s-15"></i></a>
                    </td>

                </tr>
                }


            </tbody>
        </table>

    </div>
</div>
