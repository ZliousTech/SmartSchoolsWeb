

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
    Languges CurrentLanguage = ViewBag.CurrentLanguage;

}
<div class="head-body-col">
    <span onclick="goBack()">
        <!-- back  icon-->
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </span>
    <h2>@R.GetResource("BusesSetting")</h2>
</div>
<div class="Dashboard-widget">
    <a href="@Url.Action("AddBus","transportation")" class="light-component widget">

        <div class="overlay-head">
            <h3>@R.GetResource("AddBus")</h3>
        </div>

        <img src="~/AppContent/WidgetImages/Bus3.jpg" />
    </a>

    <a href="@Url.Action("ListBus","transportation")" class="light-component widget">

        <div class="overlay-head">
            <h3>@R.GetResource("schoolBuses")</h3>
        </div>

        <img src="~/AppContent/WidgetImages/Bus3.jpg" />
    </a>
</div>




