@model List<SmartSchool.Models.Settings.Viewschoolbranches>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Languges CurrentLanguage = ViewBag.CurrentLanguage;
}

@if (CurrentLanguage == Languges.Arabic)
{
    <script src="//cdn.datatables.net/plug-ins/1.10.20/i18n/Arabic.json"></script>
}

<div class="head-body-col">
    <span onclick="goBack()">
        <!-- back  icon-->
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </span>
    <h2>@R.GetResource("SchoolBranches")</h2>
</div>

<div class="inner-Container">
    <div class="light-component action">
        <a href="@Url.Action("RegistrationStepOne","SchoolRegistration")" style="width:250px;">
            <span>
                <i class="fa fa-plus" aria-hidden="true"></i>
            </span>
            <h5>
                @R.GetResource("Registeranewschool(s)")
            </h5>
        </a>
    </div>
</div>

<div class="inner-Container">
    <div class="light-component inner">
        <table class="table" id="exportTable" style="width:100%">
            <thead>
                <tr>
                    <th scope="col"> @R.GetResource("SchoolArabicName") </th>
                    <th scope="col"> @R.GetResource("SchoolEnglishName") </th>
                    <th scope="col"> @R.GetResource("ContactNo") </th>
                    <th scope="col"> @R.GetResource("Country") </th>
                    <th scope="col"> @R.GetResource("City") </th>
                    <th scope="col"> @R.GetResource("Email") </th>
                    <th scope="col"> @R.GetResource("Edit") </th>
                    @*<th scope="col"> @R.GetResource("View") </th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SchoolArabicName</td>
                        <td>@item.SchoolEnglishName</td>
                        <td>@item.SchoolContactNumber</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.Email</td>
                        <td>
                            <a href="@Url.Action("EditSchoolBranch","Settings", new { SchoolID=item.SchoolID })" class="padding">
                                <span> @R.GetResource("Edit") </span>
                            </a>
                        </td>
                        @*<td>
                            <a href="@Url.Action("ViewSchoolBranch","Settings", new { SchoolID=item.SchoolID })" class="padding">
                                <span> @R.GetResource("View") </span>
                            </a>
                        </td>*@
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
