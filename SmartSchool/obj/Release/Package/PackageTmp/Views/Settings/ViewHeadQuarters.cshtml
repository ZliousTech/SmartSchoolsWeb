@model List<SmartSchool.Models.Settings.Viewheadquarters>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    Languges CurrentLanguage = ViewBag.CurrentLanguage;
}

@if (CurrentLanguage == Languges.Arabic)
{
    <script src="//cdn.datatables.net/plug-ins/1.10.20/i18n/Arabic.json"></script>
}

<div class="head-body-col">
    <span onclick="goBack()">
        <!-- back  icon-->
        <i class="fa fa-arrow-left" aria-hidden="true"></i>
    </span>
    <h2>@R.GetResource("HeadQuarters")</h2>
</div>


<div class="inner-Container">
    <div class="light-component action">
        <a href="@Url.Action("RegisterHeadQuarter","Settings")" style="width:250px;">
            <span>
                <i class="fa fa-plus" aria-hidden="true"></i>
            </span>
            <h5>
                @R.GetResource("Registeranewheadquarter")
            </h5>
        </a>
    </div>
</div>

<div class="inner-Container">
    <div class="light-component inner">
        <table class="table" id="exportTable" style="width:100%">
            <thead>
                <tr>
                    <th scope="col"> @R.GetResource("CompanyArabicName") </th>
                    <th scope="col"> @R.GetResource("CompanyEnglishName") </th>
                    <th scope="col"> @R.GetResource("ContactNo") </th>
                    <th scope="col"> @R.GetResource("Country") </th>
                    <th scope="col"> @R.GetResource("City") </th>
                    <th scope="col"> @R.GetResource("Email") </th>
                    <th scope="col"> @R.GetResource("Edit") </th>
                    <th scope="col"> @R.GetResource("SetUserInfo") </th>
                    <th scope="col"> @R.GetResource("ViewUserInfo") </th>
                    <th scope="col"> @R.GetResource("SchoolBranches") </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.CompanyArabicName</td>
                        <td>@item.CompanyEnglishName</td>
                        <td>@item.ContactNo</td>
                        <td>@item.Country</td>
                        <td>@item.City</td>
                        <td>@item.Email</td>
                        <td>
                            <a href="@Url.Action("EditHeadQuarter","Settings", new { CompanyID=item.CompanyID })" class="padding">
                                <span> @R.GetResource("Edit") </span>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("RegisterUserHeadQuarter","Settings", new { CompanyID=item.CompanyID })" class="padding">
                                <span> @R.GetResource("SetUserInfo") </span>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("DisplayUserInfoHeadQuarter","Settings", new { CompanyID=item.CompanyID })" class="padding">
                                <span> @R.GetResource("ViewUserInfo") </span>
                            </a>
                        </td>
                        <td>
                            <a href="@Url.Action("ViewSchoolBranches","Settings", new { CompanyID=item.CompanyID })" class="padding">
                                <span> @R.GetResource("View") </span>
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
